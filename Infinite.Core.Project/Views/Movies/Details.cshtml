@model MovieViewModel
@{
    ViewData["Title"] = "Details";
}

<h1>List of Movies</h1>

<div class="row">
    <div class="col-md-5">
        <ul class="list-group">
            <li class="list-group-item"><b>Movie Name:</b>@Model.MovieName</li>
            <li class="list-group-item"><b>Production Name:</b>@Model.ProductionName</li>
            <li class="list-group-item"><b>Genre Name:</b>@Model.GenreId</li>
            <li class="list-group-item"><b>Release Date:</b>@Model.ReleaseDate.ToShortDateString()</li>
        </ul>
        <a asp-controller="Movies" asp-action="Index">
            Back to List
        </a>
    </div>
</div>