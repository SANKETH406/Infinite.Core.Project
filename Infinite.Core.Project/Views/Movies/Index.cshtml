@model IEnumerable<MovieViewModel>
@{
    ViewData["Title"] = "Index";
}

<div class="row">
    <div class="col-md-7">    
<div class="row">
    <div class="col">
                <h2>List of Movies</h2>
                </div>
            <div class="col text-end">
                <a asp-controller="Movies" asp-action="Create" class="btn btn-primary">Add Movie</a>
                </div>
            </div>
        <div class="row">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Movie Name</th>
                        <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach(var item in Model)
                {
                    <tr>
                        <td>@item.MovieName</td>
                        <td>
                            <a asp:asp-controller="Movies" class="btn btn-primary" asp-action="Details" asp-route-id="@item.Id">Details</a>
                                <a asp:asp-controller="Movies" class="btn btn-primary" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                                <a asp:asp-controller="Movies" class="btn btn-primary" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
</div>

