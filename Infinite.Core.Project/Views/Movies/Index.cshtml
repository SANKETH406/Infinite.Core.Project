@model IEnumerable<MovieViewModel>
@{
    ViewData["Title"] = "Index";
}

<div class="row">
    <div class="col-md-5">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Movie Name</th>
                    <th>Production</th>
                    <th>Genre Id</th>
                    <th>Release Date</th>
                </tr>
            </thead>
            <tbody>
                @foreach(var item in Model)
                {
                    <tr>
                        <td>@item.MovieName</td>
                        <td>@item.ProductionName</td>
                        <td>@item.GenreId</td>
                        <td>@item.ReleaseDate</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

